<%= form_with scope: :post, url: posts_path, method: :post, data: { controller: "form", action: "turbo:submit-end->form#reset" } do |f| %>
  <%= f.text_area :body, class: "form-control", placeholder: "What's going on?" %>
  <%= f.submit "Create", class: "btn btn-primary mt-3" %>
<% end %>
<turbo-frame id="posts" class="mt-5 d-grid gap-3">
  <% @posts.each do |post| %>
    <%= link_to post, class: "text-body", style: "text-decoration: none;" do %>
      <%= render "posts/post", post: post %>
    <% end %>
  <% end %>
</turbo-frame>
