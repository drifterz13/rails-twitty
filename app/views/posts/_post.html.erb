<%= turbo_frame_tag dom_id(post) do %>
  <div class="cursor-pointer" data-controller="link" data-url="<%= post_path(post.id) %>" data-action="click->link#to">
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <div class="flex justify-between items-center mb-2">
          <div class="flex gap-1 items-center">
            <span class="font-semibold">
              <%= current_user.email %>
            </span>
            <span class="text-xs">‚óè</span>
            <span class="text-gray-400 font-light"><%= time_ago_in_words(post.created_at) %></span>
          </div>
          <%= render "posts/menu", { post: post } %>
        </div>
        <p><%= post.body %></p>
        <div class="card-actions">
          <div class="flex gap-1 items-center">
            <%= button_to like_post_path(post.id), method: :post, class: "btn btn-ghost btn-circle btn-sm hover:btn-error", data: { "link-target": "click" } do %>
              <span role="icon" aria-label="like button">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
                </svg>
              </span>
            <% end %>
            <%= turbo_frame_tag dom_id(post, :likes) do %>
              <% unless post.likes.count == 0 %>
                <%= post.likes.count %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
